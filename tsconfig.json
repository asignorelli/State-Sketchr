{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,

    "types": ["node", "vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },

  "include": ["**/*.ts", "**/*.tsx", "vite-env.d.ts", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
